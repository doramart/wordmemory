# ========================================
# 单词记忆 PWA 应用 Docker 部署配置
# ========================================

# Docker 镜像配置
DOCKER_IMAGE=wordmemory/app:latest

# 应用基础配置
NODE_ENV=production
PORT=39010
APP_PORT=39010

# MongoDB 数据库配置
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-this-password-in-production
MONGO_DATABASE=wordmemory
MONGO_PORT=27017

# 应用密钥配置（生产环境必须修改）
APP_KEYS=wordmemory_1694000000000_1000
JWT_SECRET=change-this-to-a-very-strong-secret-key-at-least-32-characters
JWT_EXPIRES_IN=7d
JWT_ISSUER=wordmemory-system

# 邮件服务配置（用于验证码登录）
MAIL_HOST=smtp.qq.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=your_email@qq.com
MAIL_PASS=your_email_auth_code
MAIL_FROM="单词记忆" <your_email@qq.com>

# 安全配置
CORS_ORIGIN=http://localhost:39010,http://127.0.0.1:39010
DOMAIN_WHITELIST=http://localhost:39010,http://127.0.0.1:39010

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=logs

# 缓存配置
CACHE_TTL=3600

# 豆包 AI 配置（可选，用于单词详情生成和图片生成）
DOUBAO_API_KEY=your-doubao-api-key
DOUBAO_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
DOUBAO_TEXT_MODEL=your-text-model-endpoint-id
DOUBAO_IMAGE_MODEL=your-image-model-endpoint-id

# 七牛云配置（可选，用于图片存储）
QINIU_ACCESS_KEY=your-qiniu-access-key
QINIU_SECRET_KEY=your-qiniu-secret-key
QINIU_BUCKET=your-bucket-name
QINIU_DOMAIN=https://your-cdn-domain.com

# Nginx 配置（可选）
NGINX_PORT=80
NGINX_SSL_PORT=443 